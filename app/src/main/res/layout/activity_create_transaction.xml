<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mjsma5.budgey.CreateTransaction"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/btnDate"
        android:layout_width="239dp"
        android:layout_height="48dp"
        android:background="@drawable/common_full_open_on_phone"
        android:text="@string/date_placeholder"
        tools:layout_editor_absoluteY="2dp"
        tools:layout_editor_absoluteX="73dp" />

    <EditText
        android:id="@+id/txtNote"
        android:layout_width="208dp"
        android:layout_height="74dp"
        android:background="@drawable/back"
        android:ems="10"
        android:gravity="fill_horizontal"
        android:hint="@string/additional_notes"
        android:inputType="textMultiLine"
        tools:layout_editor_absoluteY="421dp"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="@string/b"
        tools:layout_editor_absoluteY="93dp"
        tools:layout_editor_absoluteX="244dp" />

    <Button
        android:id="@+id/btnChooseCategory"
        android:layout_width="182dp"
        android:layout_height="48dp"
        android:text="@string/choose_category"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="461dp" />

    <Button
        android:id="@+id/btnFinish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        tools:layout_editor_absoluteY="463dp"
        tools:layout_editor_absoluteX="288dp" />

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="20dp"
        android:visibility="gone"
        tools:layout_editor_absoluteY="256dp"
        tools:layout_editor_absoluteX="192dp" />

    <Button
        android:id="@+id/btnDateFinish"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="15dp"
        android:text="Done"
        android:visibility="gone"
        tools:layout_editor_absoluteY="56dp"
        tools:layout_editor_absoluteX="311dp" />

    <TableLayout
        android:id="@+id/tblCalculator"
        android:layout_width="353dp"
        android:layout_height="304dp"
        android:columnCount="4"
        tools:layout_editor_absoluteY="138dp"
        tools:layout_editor_absoluteX="16dp">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnOpen"
                android:layout_width="88dp"
                android:layout_height="60dp"
                android:text="@string/openp"
                tools:layout_editor_absoluteX="15dp"
                tools:layout_editor_absoluteY="151dp" />

            <Button
                android:id="@+id/btnClose"
                android:layout_width="88dp"
                android:layout_height="60dp"
                android:text="@string/closep"
                tools:layout_editor_absoluteX="103dp"
                tools:layout_editor_absoluteY="151dp" />

            <Button
                android:id="@+id/btnClear"
                android:layout_width="88dp"
                android:layout_height="60dp"
                android:text="@string/ce"
                tools:layout_editor_absoluteX="279dp"
                tools:layout_editor_absoluteY="151dp" />

            <Button
                android:id="@+id/btnPercentage"
                android:layout_width="88dp"
                android:layout_height="60dp"
                android:text="@string/percent"
                tools:layout_editor_absoluteX="191dp"
                tools:layout_editor_absoluteY="151dp" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn7"
                android:layout_width="88dp"
                android:layout_height="60dp"
                android:text="@string/_7"
                tools:layout_editor_absoluteX="15dp"
                tools:layout_editor_absoluteY="215dp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="88dp"
                android:layout_height="60dp"
                android:text="@string/_8"
                tools:layout_editor_absoluteX="103dp"
                tools:layout_editor_absoluteY="215dp" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="88dp"
                android:layout_height="60dp"
                android:text="@string/_9"
                tools:layout_editor_absoluteX="191dp"
                tools:layout_editor_absoluteY="215dp" />

            <Button
                android:id="@+id/btnDiv"
                android:layout_width="88dp"
                android:layout_height="60dp"
                android:text="@string/div"
                tools:layout_editor_absoluteX="88dp"
                tools:layout_editor_absoluteY="-416dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn4"
                android:layout_width="88dp"
                android:layout_height="60dp"
                android:text="@string/_4"
                tools:layout_editor_absoluteX="15dp"
                tools:layout_editor_absoluteY="279dp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="88dp"
                android:layout_height="60dp"
                android:text="@string/_5"
                tools:layout_editor_absoluteX="103dp"
                tools:layout_editor_absoluteY="279dp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="88dp"
                android:layout_height="60dp"
                android:text="@string/_6"
                tools:layout_editor_absoluteX="191dp"
                tools:layout_editor_absoluteY="279dp" />

            <Button
                android:id="@+id/btnMult"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/x"
                tools:layout_editor_absoluteX="279dp"
                tools:layout_editor_absoluteY="279dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn1"
                android:layout_width="88dp"
                android:layout_height="60dp"
                android:text="@string/_1"
                tools:layout_editor_absoluteX="15dp"
                tools:layout_editor_absoluteY="343dp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="88dp"
                android:layout_height="60dp"
                android:text="@string/_2"
                tools:layout_editor_absoluteX="103dp"
                tools:layout_editor_absoluteY="343dp" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="88dp"
                android:layout_height="60dp"
                android:text="@string/_3"
                tools:layout_editor_absoluteX="191dp"
                tools:layout_editor_absoluteY="343dp" />

            <Button
                android:id="@+id/btnMin"
                android:layout_width="88dp"
                android:layout_height="60dp"
                android:text="@string/min"
                tools:layout_editor_absoluteX="279dp"
                tools:layout_editor_absoluteY="343dp" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn0"
                android:layout_width="88dp"
                android:layout_height="60dp"
                android:text="@string/_0"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="407dp" />

            <Button
                android:id="@+id/btnDecimal"
                android:layout_width="88dp"
                android:layout_height="60dp"
                android:text="@string/dec"
                tools:layout_editor_absoluteX="104dp"
                tools:layout_editor_absoluteY="407dp" />

            <Button
                android:id="@+id/btnEquals"
                android:layout_width="88dp"
                android:layout_height="60dp"
                android:text="@string/equals"
                tools:layout_editor_absoluteX="192dp"
                tools:layout_editor_absoluteY="407dp" />

            <Button
                android:id="@+id/btnSum"
                android:layout_width="88dp"
                android:layout_height="60dp"
                android:text="@string/plus"
                tools:layout_editor_absoluteX="280dp"
                tools:layout_editor_absoluteY="407dp" />

        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="68dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="56dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rbTaxDeductable"
                style="@android:style/Widget.Material.CompoundButton.RadioButton"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="@string/tax_deductable"
                tools:layout_editor_absoluteX="-53dp"
                tools:layout_editor_absoluteY="-45dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtResult"
                android:layout_width="156dp"
                android:layout_height="41dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:gravity="center"
                android:hint="@string/_0_00"
                android:textAppearance="@android:style/TextAppearance.Material.Large"
                app:layout_constraintRight_toLeftOf="@+id/btnMethod"
                app:layout_constraintTop_toBottomOf="@+id/btnDate" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="122dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <Button
                android:id="@+id/btnMethod"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="2dp"
                android:background="?android:attr/statusBarColor"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnDate" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
