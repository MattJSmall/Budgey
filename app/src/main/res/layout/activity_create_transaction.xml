<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mjsma5.budgey.CreateTransaction"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/btnDate"
        android:layout_width="239dp"
        android:layout_height="29dp"
        android:background="@drawable/common_full_open_on_phone"
        android:text="@string/date_placeholder"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="44dp"
        android:layout_height="42dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:text="@string/b"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/txtResult"
        app:layout_constraintRight_toLeftOf="@+id/btnMethod"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/btnDate" />

    <Button
        android:id="@+id/btnMethod"
        android:layout_width="66dp"
        android:layout_height="46dp"
        android:background="?android:attr/statusBarColor"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/btnDate"
        android:layout_marginEnd="8dp" />

    <EditText
        android:id="@+id/txtNote"
        android:layout_width="171dp"
        android:layout_height="72dp"
        android:ems="10"
        android:hint="@string/additional_notes"
        android:background="@drawable/back"
        android:gravity="fill_horizontal"
        android:inputType="textMultiLine"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtResult"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btnChooseCategory"
        android:layout_width="182dp"
        android:layout_height="48dp"
        android:text="@string/choose_category"
        tools:layout_editor_absoluteX="101dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="2dp" />

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="243dp"
        android:layout_height="41dp"
        android:gravity="center"
        android:hint="@string/_0_00"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/btnDate"
        android:layout_marginEnd="8dp"
        tools:layout_editor_absoluteX="16dp" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/txtNote"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtResult">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtExpense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/expense"
                tools:layout_editor_absoluteX="195dp"
                tools:layout_editor_absoluteY="80dp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/rbExpense"
                android:layout_width="30dp"
                android:layout_height="25dp"
                tools:layout_editor_absoluteX="346dp"
                tools:layout_editor_absoluteY="77dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtIncome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/income"
                tools:layout_editor_absoluteX="195dp"
                tools:layout_editor_absoluteY="107dp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/rbIncome"
                android:layout_width="30dp"
                android:layout_height="25dp"
                tools:layout_editor_absoluteX="346dp"
                tools:layout_editor_absoluteY="102dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtTaxable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tax_deductable"
                tools:layout_editor_absoluteX="195dp"
                tools:layout_editor_absoluteY="133dp" />

            <Space
                android:layout_width="25dp"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/rbTaxDeductable"
                android:layout_width="30dp"
                android:layout_height="25dp"
                tools:layout_editor_absoluteX="346dp"
                tools:layout_editor_absoluteY="127dp" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/tblCalculator"
        android:layout_width="353dp"
        android:layout_height="304dp"
        android:columnCount="4"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@+id/btnChooseCategory"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/txtNote">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnOpen"
                android:layout_width="88dp"
                android:layout_height="60dp"
                android:text="@string/openp"
                tools:layout_editor_absoluteX="15dp"
                tools:layout_editor_absoluteY="151dp" />

            <Button
                android:id="@+id/btnClose"
                android:layout_width="88dp"
                android:layout_height="60dp"
                android:text="@string/closep"
                tools:layout_editor_absoluteX="103dp"
                tools:layout_editor_absoluteY="151dp" />

            <Button
                android:id="@+id/btnClear"
                android:layout_width="88dp"
                android:layout_height="60dp"
                android:text="@string/ce"
                tools:layout_editor_absoluteX="279dp"
                tools:layout_editor_absoluteY="151dp" />

            <Button
                android:id="@+id/btnPercentage"
                android:layout_width="88dp"
                android:layout_height="60dp"
                android:text="@string/percent"
                tools:layout_editor_absoluteX="191dp"
                tools:layout_editor_absoluteY="151dp" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn7"
                android:layout_width="88dp"
                android:layout_height="60dp"
                android:text="@string/_7"
                tools:layout_editor_absoluteX="15dp"
                tools:layout_editor_absoluteY="215dp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="88dp"
                android:layout_height="60dp"
                android:text="@string/_8"
                tools:layout_editor_absoluteX="103dp"
                tools:layout_editor_absoluteY="215dp" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="88dp"
                android:layout_height="60dp"
                android:text="@string/_9"
                tools:layout_editor_absoluteX="191dp"
                tools:layout_editor_absoluteY="215dp" />

            <Button
                android:id="@+id/btnDiv"
                android:layout_width="88dp"
                android:layout_height="60dp"
                android:text="@string/div"
                tools:layout_editor_absoluteX="88dp"
                tools:layout_editor_absoluteY="-416dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn4"
                android:layout_width="88dp"
                android:layout_height="60dp"
                android:text="@string/_4"
                tools:layout_editor_absoluteX="15dp"
                tools:layout_editor_absoluteY="279dp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="88dp"
                android:layout_height="60dp"
                android:text="@string/_5"
                tools:layout_editor_absoluteX="103dp"
                tools:layout_editor_absoluteY="279dp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="88dp"
                android:layout_height="60dp"
                android:text="@string/_6"
                tools:layout_editor_absoluteX="191dp"
                tools:layout_editor_absoluteY="279dp" />

            <Button
                android:id="@+id/btnMult"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/x"
                tools:layout_editor_absoluteX="279dp"
                tools:layout_editor_absoluteY="279dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn1"
                android:layout_width="88dp"
                android:layout_height="60dp"
                android:text="@string/_1"
                tools:layout_editor_absoluteX="15dp"
                tools:layout_editor_absoluteY="343dp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="88dp"
                android:layout_height="60dp"
                android:text="@string/_2"
                tools:layout_editor_absoluteX="103dp"
                tools:layout_editor_absoluteY="343dp" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="88dp"
                android:layout_height="60dp"
                android:text="@string/_3"
                tools:layout_editor_absoluteX="191dp"
                tools:layout_editor_absoluteY="343dp" />

            <Button
                android:id="@+id/btnMin"
                android:layout_width="88dp"
                android:layout_height="60dp"
                android:text="@string/min"
                tools:layout_editor_absoluteX="279dp"
                tools:layout_editor_absoluteY="343dp" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn0"
                android:layout_width="88dp"
                android:layout_height="60dp"
                android:text="@string/_0"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="407dp" />

            <Button
                android:id="@+id/btnDecimal"
                android:layout_width="88dp"
                android:layout_height="60dp"
                android:text="@string/dec"
                tools:layout_editor_absoluteX="104dp"
                tools:layout_editor_absoluteY="407dp" />

            <Button
                android:id="@+id/btnEquals"
                android:layout_width="88dp"
                android:layout_height="60dp"
                android:text="@string/equals"
                tools:layout_editor_absoluteX="192dp"
                tools:layout_editor_absoluteY="407dp" />

            <Button
                android:id="@+id/btnSum"
                android:layout_width="88dp"
                android:layout_height="60dp"
                android:text="@string/plus"
                tools:layout_editor_absoluteX="280dp"
                tools:layout_editor_absoluteY="407dp" />

        </TableRow>

    </TableLayout>

</android.support.constraint.ConstraintLayout>
